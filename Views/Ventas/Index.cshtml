@model List<ProyectoVentas.Models.Venta>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">Ganancia hoy</h6>
                <h3 class="text-success">
                    $@ViewBag.GananciaHoy
                </h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">Meta diaria</h6>
                <h3>
                    $@ViewBag.MetaDiaria
                </h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">Falta para meta</h6>
                <h3 class="text-warning">
                    $@ViewBag.FaltaParaMeta
                </h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="text-muted text-center">Progreso</h6>

                <div class="progress mt-2" style="height: 20px;">
                    <div class="progress-bar bg-success"
                         role="progressbar"
                         style="width: @ViewBag.Progreso%;"
                         aria-valuenow="@ViewBag.Progreso"
                         aria-valuemin="0"
                         aria-valuemax="100">
                        @ViewBag.Progreso%
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<h1>Lista de Ventas</h1>

@if (Model != null && Model.Count > 0)
{
<div class="table-responsive-md d-none d-md-block">
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                @* <th>Id</th> *@
                <th style="width:10%">Artículo</th>
                <th>Fecha</th>
                <th>Facebook</th>
                <th>Precio</th>
                <th>Inversión</th>
                <th>Ganancia</th>
                <th>Ubicación</th>
                <th>Cliente</th>
                <th>Comentario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venta in Model)
            {
                <tr>
                    @* <td>@venta.Id</td> *@
                    <td>@venta.Articulo</td>
                    <td>@(venta.FechaVenta?.ToString("dd/MM/yyyy") ?? "")</td>
                    <td>@venta.Facebook</td>
                    <td>@(venta.PrecioVenta?.ToString("C") ?? "")</td>
                    <td>@(venta.Inversion?.ToString("C") ?? "")</td>
                    <td>@venta.GananciaIndividual.ToString("C")</td>
                    <td>@venta.Ubicacion</td>
                    <td>@venta.Cliente</td>
                    <td>@(string.IsNullOrWhiteSpace(venta.Comentario) ? "—" : venta.Comentario)</td>
                    <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit"
                        asp-route-id="@venta.Id"
                        class="btn btn-sm btn-warning">
                            Editar
                        </a>

                        <a asp-action="Delete"
                        asp-route-id="@venta.Id"
                        class="btn btn-sm btn-danger">
                            Eliminar
                        </a>
                    </div>
                    </td>

                    
                </tr>
            }
        </tbody>
    </table>
    </div>

    <div class="d-md-none">
    @foreach (var venta in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">

                <h5 class="card-title">@venta.Articulo</h5>
                <p class="text-muted mb-2">@venta.FechaVenta?.ToString("dd/MM/yyyy")</p>

                <div><strong>Precio:</strong> @venta.PrecioVenta?.ToString("C")</div>
                <div><strong>Inversión:</strong> @venta.Inversion?.ToString("C")</div>
                <div><strong>Ganancia:</strong> @venta.GananciaIndividual.ToString("C")</div>
                <div><strong>Cliente:</strong> @venta.Cliente</div>
                <div><strong>Ubicación:</strong> @venta.Ubicacion</div>

                <div class="mt-3 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@venta.Id"
                       class="btn btn-warning btn-sm flex-fill">
                        Editar
                    </a>

                    <a asp-action="Delete" asp-route-id="@venta.Id"
                       class="btn btn-danger btn-sm flex-fill">
                        Eliminar
                    </a>
                </div>

            </div>
        </div>
    }
</div>

}
else
{
    <p>No hay ventas registradas.</p>
}
